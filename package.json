{
  "name": "aquarium-monitor",
  "version": "1.0.0",
  "description": "Aquarium water quality monitoring system using WoT (HTTP + Modbus)",
  "main": "./build/app.js",
  "scripts": {
    "start": "node ./build/app",
    "build": "tsc",
    "mock": "node ./build/mock/ModbusFilterPumpMockServer.js",
    "mock:build": "tsc && node ./build/mock/ModbusFilterPumpMockServer.js",
    "dev:build": "tsc -w",
    "dev:run": "nodemon build/app",
    "start:dev": "concurrently npm:dev:*",
    "test": "jest",
    "start:build": "tsc && node ./build/app"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@node-wot/binding-http": "^0.8.12",
    "@node-wot/binding-modbus": "^0.9.1",
    "@node-wot/core": "^0.8.12",
    "@types/node": "^20.3.1",
    "modbus-serial": "^8.0.17",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "typescript": "^5.9.3"
  }
}