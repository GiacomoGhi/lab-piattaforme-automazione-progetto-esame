{
    "@context": [
        "https://www.w3.org/2022/wot/td/v1.1",
        {
            "saref": "https://saref.etsi.org/core/"
        }
    ],
    "@type": [
        "saref:Sensor"
    ],
    "title": "WaterQualitySensor",
    "description": "Aquarium water quality sensor monitoring pH, temperature and oxygen levels",
    "properties": {
        "pH": {
            "type": "number",
            "description": "Current pH level of the water",
            "minimum": 0,
            "maximum": 14,
            "observable": true,
            "readOnly": true
        },
        "temperature": {
            "type": "number",
            "description": "Current water temperature in Celsius",
            "unit": "celsius",
            "minimum": 0,
            "maximum": 40,
            "observable": true,
            "readOnly": true
        },
        "oxygenLevel": {
            "type": "number",
            "description": "Dissolved oxygen level in mg/L",
            "minimum": 0,
            "maximum": 20,
            "observable": true,
            "readOnly": true
        },
        "allParameters": {
            "type": "object",
            "description": "All water quality parameters",
            "properties": {
                "pH": {
                    "type": "number"
                },
                "temperature": {
                    "type": "number"
                },
                "oxygenLevel": {
                    "type": "number"
                },
                "timestamp": {
                    "type": "string"
                }
            },
            "observable": true,
            "readOnly": true
        }
    },
    "actions": {},
    "events": {
        "parameterAlert": {
            "description": "Alert when a parameter is out of optimal range",
            "data": {
                "type": "object",
                "properties": {
                    "parameter": {
                        "type": "string"
                    },
                    "value": {
                        "type": "number"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "ok",
                            "warning",
                            "alert"
                        ]
                    },
                    "message": {
                        "type": "string"
                    }
                }
            }
        }
    }
}