{
    "@context": [
        "https://www.w3.org/2022/wot/td/v1.1",
        {
            "saref": "https://saref.etsi.org/core/"
        }
    ],
    "@type": [
        "saref:Sensor"
    ],
    "title": "WaterQualitySensor",
    "description": "Aquarium water quality sensor monitoring pH, temperature and oxygen levels",
    "securityDefinitions": {
        "nosec": {
            "scheme": "nosec"
        }
    },
    "security": "nosec",
    "properties": {
        "pH": {
            "type": "number",
            "description": "Current pH level of the water",
            "minimum": 0,
            "maximum": 14,
            "observable": true,
            "readOnly": true
        },
        "temperature": {
            "type": "number",
            "description": "Current water temperature in Celsius",
            "unit": "celsius",
            "minimum": 0,
            "maximum": 40,
            "observable": true,
            "readOnly": true
        },
        "oxygenLevel": {
            "type": "number",
            "description": "Dissolved oxygen level in mg/L",
            "minimum": 0,
            "maximum": 20,
            "observable": true,
            "readOnly": true
        },
        "pHStatus": {
            "type": "string",
            "description": "Status level for pH",
            "enum": [
                "ok",
                "warning",
                "alert"
            ],
            "observable": true,
            "readOnly": true
        },
        "temperatureStatus": {
            "type": "string",
            "description": "Status level for temperature",
            "enum": [
                "ok",
                "warning",
                "alert"
            ],
            "observable": true,
            "readOnly": true
        },
        "oxygenLevelStatus": {
            "type": "string",
            "description": "Status level for oxygen",
            "enum": [
                "ok",
                "warning",
                "alert"
            ],
            "observable": true,
            "readOnly": true
        },
        "allParameters": {
            "type": "object",
            "description": "All water quality parameters",
            "properties": {
                "pH": {
                    "type": "number"
                },
                "temperature": {
                    "type": "number"
                },
                "oxygenLevel": {
                    "type": "number"
                },
                "timestamp": {
                    "type": "string"
                }
            },
            "observable": true,
            "readOnly": true
        },
        "mode": {
            "type": "string",
            "description": "Sampling mode",
            "enum": [
                "demo",
                "production"
            ],
            "observable": true,
            "readOnly": false
        },
        "samplingIntervalMs": {
            "type": "number",
            "description": "Current sampling interval in milliseconds",
            "observable": true,
            "readOnly": true
        },
        "config": {
            "type": "object",
            "description": "Sensor configuration including ranges and mode",
            "properties": {
                "mode": {
                    "type": "string",
                    "enum": [
                        "demo",
                        "production"
                    ]
                },
                "parameters": {
                    "type": "object",
                    "properties": {
                        "pH": {
                            "type": "object",
                            "properties": {
                                "unit": { "type": "string" },
                                "description": { "type": "string" },
                                "configurable": {
                                    "type": "object",
                                    "properties": {
                                        "min": { "type": "number" },
                                        "max": { "type": "number" }
                                    },
                                    "required": ["min", "max"]
                                },
                                "optimal": {
                                    "type": "object",
                                    "properties": {
                                        "min": { "type": "number" },
                                        "max": { "type": "number" }
                                    },
                                    "required": ["min", "max"]
                                }
                            },
                            "required": ["unit", "description", "configurable", "optimal"]
                        },
                        "temperature": {
                            "type": "object",
                            "properties": {
                                "unit": { "type": "string" },
                                "description": { "type": "string" },
                                "configurable": {
                                    "type": "object",
                                    "properties": {
                                        "min": { "type": "number" },
                                        "max": { "type": "number" }
                                    },
                                    "required": ["min", "max"]
                                },
                                "optimal": {
                                    "type": "object",
                                    "properties": {
                                        "min": { "type": "number" },
                                        "max": { "type": "number" }
                                    },
                                    "required": ["min", "max"]
                                }
                            },
                            "required": ["unit", "description", "configurable", "optimal"]
                        },
                        "oxygenLevel": {
                            "type": "object",
                            "properties": {
                                "unit": { "type": "string" },
                                "description": { "type": "string" },
                                "configurable": {
                                    "type": "object",
                                    "properties": {
                                        "min": { "type": "number" },
                                        "max": { "type": "number" }
                                    },
                                    "required": ["min", "max"]
                                },
                                "optimal": {
                                    "type": "object",
                                    "properties": {
                                        "min": { "type": "number" },
                                        "max": { "type": "number" }
                                    },
                                    "required": ["min", "max"]
                                }
                            },
                            "required": ["unit", "description", "configurable", "optimal"]
                        }
                    },
                    "required": ["pH", "temperature", "oxygenLevel"]
                },
                "modes": {
                    "type": "object"
                }
            },
            "required": ["mode", "parameters"],
            "observable": true,
            "readOnly": false
        }
    },
    "actions": {},
    "events": {
        "pHStatusChanged": {
            "description": "Emitted when pH status changes",
            "data": {
                "type": "object",
                "properties": {
                    "parameter": {
                        "type": "string"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "ok",
                            "warning",
                            "alert"
                        ]
                    },
                    "value": {
                        "type": "number"
                    },
                    "timestamp": {
                        "type": "string"
                    }
                }
            }
        },
        "temperatureStatusChanged": {
            "description": "Emitted when temperature status changes",
            "data": {
                "type": "object",
                "properties": {
                    "parameter": {
                        "type": "string"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "ok",
                            "warning",
                            "alert"
                        ]
                    },
                    "value": {
                        "type": "number"
                    },
                    "timestamp": {
                        "type": "string"
                    }
                }
            }
        },
        "oxygenLevelStatusChanged": {
            "description": "Emitted when oxygen level status changes",
            "data": {
                "type": "object",
                "properties": {
                    "parameter": {
                        "type": "string"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "ok",
                            "warning",
                            "alert"
                        ]
                    },
                    "value": {
                        "type": "number"
                    },
                    "timestamp": {
                        "type": "string"
                    }
                }
            }
        },
        "configChanged": {
            "description": "Emitted when configuration is updated",
            "data": {
                "type": "object"
            }
        }
    }
}